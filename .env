# .env

# --- General Configuration ---
# Set the flight API provider. Options: amadeus, duffel, kiwi, sabre, mock
FLIGHT_API_PROVIDER=mock

# --- PostgreSQL Database Configuration ---
POSTGRES_DB=rasa
POSTGRES_USER=rasa
POSTGRES_PASSWORD=your_strong_password

# --- Amadeus API Configuration ---
# (https://developers.amadeus.com/get-started/get-started-with-self-service-apis-335)
AMADEUS_CLIENT_ID=
AMADEUS_CLIENT_SECRET=
# AMADEUS_BASE_URL=https://test.api.amadeus.com # Optional: Override default test URL

# --- Duffel API Configuration ---
# (https://duffel.com/docs/api/v1/getting-started)
DUFFEL_API_KEY=
# DUFFEL_BASE_URL=https://api.duffel.com # Optional: Override default URL
# DUFFEL_API_VERSION=v1 # Optional: Override default API version

# --- Kiwi.com (Tequila) API Configuration ---
# (https://tequila.kiwi.com/portal/docs/tequila_api)
KIWI_API_KEY=
# KIWI_BASE_URL=https://api.tequila.kiwi.com # Optional: Override default URL
# KIWI_PARTNER_ID=picky # Optional: Override default partner ID

# --- Sabre API Configuration ---
# (https://developer.sabre.com/guides/travel-agency/getting-started)
SABRE_CLIENT_ID=
SABRE_CLIENT_SECRET=
# SABRE_BASE_URL=https://api.cert.platform.sabre.com # Optional: Override default sandbox URL
